openapi: 3.0.1
info:
  title: Bank Transaction
  description: This is a Bank server to get Transaction deatils and its amount.
  contact:
    email: roshanjain@xebia.com
  version: 1.0.0
servers:
- url: http://localhost:8080/bank-transaction-services/rs/v1/current-accounts
tags:
- name: bank-transaction-services
  description: Transaction services
  externalDocs:
    description: Base
    url: http://localhost:8080/bank-transaction-services/
paths:
  /transactions:
    get:
      tags:
      - transactions
      summary: get all transaction of account
      description: Acccount id can be provided
      operationId: findPetsByStatus
      parameters:
      - name: accountId
        in: query
        description: accountId values that need to be considered for get transaction
        required: true
        schema:
          type: string
      responses:
        200:
          description: successful operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/TransactionDTO'
        400:
          description: Unsuccessful operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
        401:
          description: Unauthorized  operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
        403:
          description: Forbidden operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
        422:
          description: Invalid input
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
      security:
      - basicAuth: []
  /transactionsbytype:
    get:
      tags:
      - transactions
      summary: get all transaction of account by specific transaction type
      description: Acccount id and transaction type can be provided
      parameters:
      - name: accountId
        in: query
        description: accountId values that need to be considered for get transaction
        required: true
        schema:
          type: string
      - name: transType
        in: query
        description: transType values that need to be considered for filter transaction
        required: true
        schema:
          type: string
      responses:
        200:
          description: successful operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/TransactionDTO'
        400:
          description: Unsuccessful operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
        401:
          description: Unauthorized  operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
        403:
          description: Forbidden operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
        422:
          description: Invalid input
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
      security:
      - basicAuth: []
  /transaction/total-amount:
    get:
      tags:
      - total-amount
      summary: get total amount of specefic transaction type of account
      description: Acccount id and transaction type can be provided
      parameters:
      - name: accountId
        in: query
        description: accountId values that need to be considered for get transaction
        required: true
        schema:
          type: string
      - name: transType
        in: query
        description: transType values that need to be considered for filter transaction
        required: true
        schema:
          type: string
      responses:
        200:
          description: successful operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Account'
        400:
          description: Unsuccessful operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
        401:
          description: Unauthorized  operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
        403:
          description: Forbidden operation
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
        422:
          description: Invalid input
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/ErrorResponse'
      security:
      - basicAuth: []
components:
  schemas:
    Account:
      type: object
      properties:
        totalAmount:
          type: number
      xml:
        name: account
    TransactionDTO:
      type: object
      properties:
        id:
          type: string
        accountId:
          type: string
        counterpartyAccount:
          type: string
        counterpartyName:
          type: string
        counterPartyLogoPath:
          type: string
        instructedAmount:
          type: string
        instructedCurrency:
          type: string
        transactionAmount:
          type: string
        transactionCurrency:
          type: string
        transactionType:
          type: string
        description:
          type: string
      xml:
        name: transactionDTO
    ErrorResponse:
      type: object
      properties:
        statusCode:
          type: string
        message:
          type: string
      xml:
        name: account
  securitySchemes:
    basicAuth:
      type: http
      description: HTTP Basic Authentication.
      scheme: basic
